FROM alpine:3.17

RUN echo "**** Instalando ****" && \
    apk --update --no-cache add curl ca-certificates nginx sudo git tar wget util-linux apache2-utils && \
    apk add --no-cache --upgrade bash && \
    apk update

USER container
ENV USER container
ENV HOME /home/container
ENV SHELL /bin/bash

WORKDIR /home/container

COPY entrypoint.sh /entrypoint.sh

CMD ["/bin/bash", "/entrypoint.sh"]
